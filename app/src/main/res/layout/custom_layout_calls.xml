<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_layout_calls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorBG">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Contact_Name_calls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Contact_Relation_calls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(Relation)"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="22dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/CallPerson_calls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|fill|fill_horizontal"
            android:text="Call"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/TextPerson_calls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS/Text"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>